generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  Male
  Female
}

enum Qualification {
  Diploma
  Bachelors
  Masters
  PHD
}

model Student {
  id                String     @id @default(uuid())
  first_name        String
  last_name         String
  DOB               DateTime   @db.Date
  School            String
  gender            Gender
  photo             String
  city              String
  contact_number    Int
  email             String
  emergency_contact Int
  enrollment_data   DateTime   @db.Date
  guardians         Guardian[]
}

model Teacher {
  id              String        @id @default(uuid())
  first_name      String
  last_name       String
  DOB             DateTime      @db.Date
  School          String
  gender          Gender
  photo           String
  city            String
  contact_number  Int
  email           String
  qualification   Qualification
  subjects        String[]
  employment_date DateTime      @db.Date
}

model Guardian {
  id             String    @id @default(uuid())
  first_name     String
  last_name      String
  city           String
  contact_number String
  email          String
  occupation     String
  Student        Student[]
}
